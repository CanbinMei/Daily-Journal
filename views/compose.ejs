<%- include("partials/header"); -%>

<h1 style="text-align:center">Compose</h1>

<form class="postForm" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" autocomplete="off">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="5"></textarea>
  </div>
  <div class="publishButtonDiv">
    <button class="btn btn-primary btn-md publishBotton" type="submit" name="button" style="background-color:#9399ff">Publish</button>
  </div>
</form>

<%- include("partials/footer"); -%>
